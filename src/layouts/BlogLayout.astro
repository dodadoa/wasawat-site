---
import Layout from "./Layout.astro"

const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title}>
  <div class="text-white px-6 py-12 font-mono">
    <h1 class="text-3xl">{frontmatter.title}</h1>
    <p>{frontmatter.description}</p>
    <slot />
  </div>
</Layout>

<style>
  h1 {
    margin-top: 10rem;
    margin-bottom: 10rem;
  }

  li {
    margin-top: 5rem;
    margin-bottom: 5rem;
  }
</style>