---
import Layout from "./layout.astro"

const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title}>
  <div class="text-white px-6 py-12 font-mono">
    <header class="text-3xl">{frontmatter.title}</header>
    <p>{frontmatter.description}</p>
    <div class="pr-16 mt-8">
      <slot />
    </div>
  </div>
</Layout>

<style is:global>
  h1 {
    margin-top: 1rem;
    margin-bottom: 1rem;
    font-size: 20px;
  }

  li {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    margin-left: 1rem;
    font-size: 14px;
    list-style-type: circle;
  }

  a {
    color: #a3dd64;
  }
  a:hover {
    text-decoration: underline;
  }
</style>
